<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="1000dp"
        android:paddingLeft="@dimen/dialog_horizontal_margin"
        android:paddingRight="@dimen/dialog_horizontal_margin"
        android:paddingTop="@dimen/dialog_vertical_margin"
        android:paddingBottom="@dimen/dialog_vertical_margin"
        tools:context="de.tommy13.sugar.general.MainActivity">




        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="64"
            android:layout_height="wrap_content"
            android:background="@drawable/overview_border"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goals_not_every_day"
                android:textStyle="bold|italic"
                android:gravity="center"
                android:layout_marginBottom="4dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/monday" />
                    <Button
                        android:id="@+id/goals_monday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>


                <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tuesday" />
                    <Button
                        android:id="@+id/goals_tuesday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/wednesday" />

                    <Button
                        android:id="@+id/goals_wednesday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/thursday" />
                    <Button
                        android:id="@+id/goals_thursday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>


                <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/friday" />
                    <Button
                        android:id="@+id/goals_friday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/saturday" />

                    <Button
                        android:id="@+id/goals_saturday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="match_parent" />


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="32">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sunday" />
                    <Button
                        android:id="@+id/goals_sunday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />
                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_weight="34"
                    android:layout_height="match_parent" />

            </LinearLayout>




        </LinearLayout>


        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent" />


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="34"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/overview_border"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/goals_every_day"
                    android:textStyle="bold|italic"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/goals_everyday"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:background="@drawable/open_input_button"
                        android:textAllCaps="false"
                        android:maxLines="1"
                        android:textColor="@color/inputButton" />

                </LinearLayout>

                <Switch
                    android:id="@+id/goals_everyday_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/goals_every_day_separate"/>

            </LinearLayout>




            <Button
                android:id="@+id/settings_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/standard_button"
                android:textColor="#ffffff"
                android:layout_marginTop="@dimen/dialog_margin_to_button"
                android:text="@string/button_cancel" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="4" />

            <Button
                android:id="@+id/settings_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:background="@drawable/standard_button"
                android:textColor="#ffffff"
                android:text="@string/button_save" />


        </LinearLayout>



    </LinearLayout>
</ScrollView>