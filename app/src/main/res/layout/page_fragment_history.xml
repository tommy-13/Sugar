<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="de.tommy13.sugar.general.MainActivity">

        <LinearLayout
            android:id="@+id/history_panel_energy"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overview_border"
            android:paddingStart="@dimen/history_panel_paddingLeft"
            android:paddingEnd="@dimen/history_panel_paddingRight"
            android:paddingTop="@dimen/history_panel_paddingTop"
            android:paddingBottom="@dimen/history_panel_paddingBottom">

            <TextView
                android:id="@+id/label_energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="@dimen/history_headline_size"
                android:layout_marginBottom="@dimen/history_panel_interspace"/>

            <de.tommy13.sugar.page_history.HistoryView
                android:id="@+id/history_energy"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_panel_height"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_panel_interspace"/>

            <TextView
                android:id="@+id/history_energy_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:ellipsize="end"
                android:textSize="@dimen/history_panel_textSize"/>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/history_panel_sugar"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overview_border"
            android:paddingStart="@dimen/history_panel_paddingLeft"
            android:paddingEnd="@dimen/history_panel_paddingRight"
            android:paddingTop="@dimen/history_panel_paddingTop"
            android:paddingBottom="@dimen/history_panel_paddingBottom"
            android:layout_marginTop="@dimen/panel_to_panel_interspace">

            <TextView
                android:id="@+id/label_sugar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="@dimen/history_headline_size"
                android:layout_marginBottom="@dimen/history_panel_interspace"/>

            <de.tommy13.sugar.page_history.HistoryView
                android:id="@+id/history_sugar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_panel_height"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_panel_interspace"/>

            <TextView
                android:id="@+id/history_sugar_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:ellipsize="end"
                android:textSize="@dimen/history_panel_textSize"/>

        </LinearLayout>




        <LinearLayout
            android:id="@+id/history_panel_fat"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/overview_border"
            android:paddingStart="@dimen/history_panel_paddingLeft"
            android:paddingEnd="@dimen/history_panel_paddingRight"
            android:paddingTop="@dimen/history_panel_paddingTop"
            android:paddingBottom="@dimen/history_panel_paddingBottom"
            android:layout_marginTop="@dimen/panel_to_panel_interspace">

            <TextView
                android:id="@+id/label_fat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold|italic"
                android:textSize="@dimen/history_headline_size"
                android:layout_marginBottom="@dimen/history_panel_interspace"/>

            <de.tommy13.sugar.page_history.HistoryView
                android:id="@+id/history_fat"
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_panel_height"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/history_panel_interspace"/>

            <TextView
                android:id="@+id/history_fat_average"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:ellipsize="end"
                android:textSize="@dimen/history_panel_textSize"/>

        </LinearLayout>


    </LinearLayout>


</ScrollView>

